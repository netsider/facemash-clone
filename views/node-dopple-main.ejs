function onSignIn(googleUser){
	console.log("Success!");
	
	let auth2 = gapi.auth2.getAuthInstance();
	console.log("auth2.isSignedIn.get(): " + auth2.isSignedIn.get());
		
	// Useful data for your client-side scripts:
